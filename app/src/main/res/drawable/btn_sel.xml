<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"></solid>
            <stroke  android:width="2dp" android:color="@android:color/darker_gray"></stroke>
        </shape>
    </item>
    <item  android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"></solid>
            <stroke android:width="1.1dp" android:color="@android:color/black"></stroke>
        </shape>
    </item>
</selector>